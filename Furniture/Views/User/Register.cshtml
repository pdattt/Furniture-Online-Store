@model Furniture.Models.Register
@using (Html.BeginForm("Register", "User", FormMethod.Post))
{

<div class="container">
    <br />
    <br />
    <h2>Register</h2>
    <br />
    <div class="form-group">
        <label for="name">Username:</label>
        @Html.ValidationMessageFor(m => m.Username, "")
        @Html.TextBoxFor(m => m.Username, new { @type = "text", @class = "form-control", @placeholder = "Enter username" })
    </div>
    <div class="form-group">
        <label for="pwd">Password:</label>
        @Html.ValidationMessageFor(m => m.Password, "")
        @Html.TextBoxFor(m => m.Password, new { @type = "password", @class = "form-control", @placeholder = "Enter password" })
    </div>
    <div class="form-group">
        <label for="confpwd">Confirm password:</label>
        @Html.ValidationMessageFor(m => m.ConfirmPass, "")
        @Html.TextBoxFor(m => m.ConfirmPass, new { @type = "password", @class = "form-control", @placeholder = "Confirm password" })
    </div>
    <div class="form-group">
        <label for="name">Full name:</label>
        @Html.ValidationMessageFor(m => m.FullName, "")
        @Html.TextBoxFor(m => m.FullName, new { @type = "text", @class = "form-control", @placeholder = "Enter full name" })
    </div>
    <div class="form-group">
        <label for="address">Address:</label>
        @Html.ValidationMessageFor(m => m.Address, "")
        @Html.TextBoxFor(m => m.Address, new { @type = "text", @class = "form-control", @placeholder = "Enter address" })
    </div>
    <div class="form-group">
        <label for="phone">Số điện thoại:</label>
        @Html.ValidationMessageFor(m => m.Phone, "")
        @Html.TextBoxFor(m => m.Phone, new { @type = "text", @class = "form-control", @id = "phone", @placeholder = "Nhập số điện thoại", @name = "phone" })
    </div>

    <br />
    <button type="submit" class="btn btn-default">Register</button>

</div>
}

