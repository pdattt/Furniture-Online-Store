}

<div class="container" style="margin-top: 30px; margin-left: 200px;">
    <h2 style="margin-left:40px;"> <b>Profile</b></h2>
    <br /> <br /> 

    @{
        var user = Model;
    }

    <div class="col col_13 checkout">
        <h4 style="width:400px;"> <b>Full name: </b> @user.FullName </h4>
        <br />
        <h4 style="width:400px;"> <b>Address: </b> @user.Address </h4>
        <br />
        <h4 style="width:400px;"> <b>Phone number: </b> @user.Phone </h4>
        <br />
    </div>

    <form action=@Url.Action("LogOut", "User")>
        <button type="submit">Log Out</button>
    </form>
</div>

