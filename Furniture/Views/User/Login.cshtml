@model Furniture.Models.Login
@using (Html.BeginForm("Login", "User", FormMethod.Post))
{

    <div class="container" style="margin-left:600px">
        <br /> <br />
        <h2>Login</h2>
        <br />
        <div class="form-group">
            <label for="name">Username:</label>
            @Html.ValidationMessageFor(m => m.Username, "x")
            @Html.TextBoxFor(m => m.Username, new { @type = "text", @class = "form-control", @placeholder = "Enter username", @style = "width: 250px;" })
        </div>
        <div class="form-group">
            <label for="pwd">Password:</label>
            @Html.ValidationMessageFor(m => m.Password, "x")
            @Html.TextBoxFor(m => m.Password, new { @type = "password", @class = "form-control", @placeholder = "Enter password", @style = "width: 250px;" })
        </div>

        <button type="submit" class="btn btn-default" style="margin-left: 75px; margin-top:10px; width: 100px;">Login</button>
        <p style="margin-top:30px; margin-bottom: 20px;"> Haven't got an account? <a href=@Url.Action("Register", "User")> Sign up </a> </p>
        @Html.ValidationSummary()
    </div>
 }

